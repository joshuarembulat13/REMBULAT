@model Student;



<h2>Add Student</h2>


<form method="post" asp-action="addstudent" asp-controller="Student" class='p-2 row gx-3 gy-2 align-items-center'>
    <div class="form-group">
        <label asp-for="studentID">Student ID</label>
        <input class="form-control" asp-for="studentID" />
    </div>
    <div class="form-group">
        <label asp-for="studentName">Enter StudentName</label>
        <input class="form-control" asp-for="studentName" />
    </div>
    <div class="form-group">
        <label asp-for="studentEmail">Enter Email</label>
        <input class="form-control" asp-for="studentEmail" />
    </div>
    <div class="form-group">

        <label class="input-group-text" asp-for="studentCourse">Enter Course</label>
        <select class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Course))" asp-for="studentCourse"></select>

    </div>
    <div class=" form-group">
        <label asp-for="DateEndrolled">Date Enrolled</label>
        <input asp-for="DateEndrolled" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary p-20">Submit</button>

</form>