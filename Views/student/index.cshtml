<h2>Student List</h2>


<div>


   <input class="btn btn-primary" type="button" value="Add Student"
      onclick="@("window.location.href='" + @Url.Action("addstudent", "Student") + "'");" />
</div>

<table class="table">
   <thead>
      <tr>
         <td>Student ID</td>
         <td>Name</td>
         <td>Email</td>
         <td>Course</td>
         <td>Enrolled</td>
         <td>Details</td>
      </tr>
   </thead>
   <tbody border="1px">
      @{
         foreach (var student in Model)
         {
            <tr>
               <td>@student.studentID</td>
               <td>@student.studentName</td>
               <td>@student.studentEmail</td>
               <td>@student.studentCourse</td>
               <td>@student.DateEndrolled</td>
               <td>
                  <a asp-action="ShowDetails" asp-route-id="@student.studentID" class="btn btn-primary">Show Details</a>
                  <a asp-action="updatestudent" asp-route-id="@student.studentID" class="btn btn-primary">Update</a>
               </td>
            </tr>
         }
      }
   </tbody>
</table>
